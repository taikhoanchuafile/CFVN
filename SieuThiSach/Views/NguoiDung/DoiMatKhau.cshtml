
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/LayOut/NguoiDung_LayOut.cshtml";
}
<h1>@ViewBag.ThongBao</h1>
@using (Html.BeginForm())
{
          <table>
    <tr>
      <td colspan="2" align="center"><b>ĐĂNG NHẬP</b></td>
    </tr>
    <tr>
      <td>Tên đăng nhập:</td>
      <td>
        @Html.TextBox("txtTaiKhoan")
      </td>
    </tr>
    <tr>
      <td>Mật Khẩu:</td>
      <td>
        @Html.Password("txtMatKhau")
      </td>
    </tr>
              <tr>
                  <td>Mật khẩu mới:</td>
                  <td>
                      @Html.Password("txtMatKhauMoi")
                  </td>
              </tr>
              <tr>
                  <td>Nhập lại mật khẩu mới:</td>
                  <td>
                      @Html.Password("txtMatKhauMoiAgain")
                  </td>
              </tr>
    <tr>
      <td colspan="2" align="center">
        <input type="submit" value="Đổi mật khẩu" name="btDoiMatKhau">
      </td>
    </tr>
    <tr>
      <td colspan="2" align="right">
        <a href="@Url.Action("DangNhap")"><i>Trở về</i></a>
      </td>
    </tr>
  </table>
}

