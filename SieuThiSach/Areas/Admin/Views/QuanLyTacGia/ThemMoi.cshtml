@model SieuThiSach.Models.TACGIA

@{
    ViewBag.Title = "Thêm mới tác giả";
    Layout = "~/Areas/Admin/Views/LayoutAD/Admin_Layout.cshtml";
}
<h1>@ViewBag.ThongBao</h1>
<h2>Thêm mới tác giả</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.TenTG, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTG)
                @Html.ValidationMessageFor(model => model.TenTG)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiachiTG, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiachiTG)
                @Html.ValidationMessageFor(model => model.DiachiTG)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DienthoaiTG, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienthoaiTG)
                @Html.ValidationMessageFor(model => model.DienthoaiTG)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
