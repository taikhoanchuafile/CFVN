    <script src="~/Content/TemplateAdmin/js/jquery.uploadify-3.1.min.js"></script>

    <script src="~/Content/TemplateAdmin/js/jquery.gritter.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.imagesloaded.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.masonry.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.knob.modified.js"></script>

    <script src="~/Content/TemplateAdmin/js/jquery.sparkline.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/counter.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/retina.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/custom.js"></script>
    <!-- end: JavaScript-->
</body>
</html>
