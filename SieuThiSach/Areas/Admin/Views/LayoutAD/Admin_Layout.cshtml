<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*Chèn file css javacript của tempaleAdmin*@
    <link href="~/Areas/Admin/TemplateAdmin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/TemplateAdmin/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/TemplateAdmin/css/style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/TemplateAdmin/css/style-responsive.css" rel="stylesheet" />
    @*Chèn css icon*@
    <link href="~/Content/fontawesome-free-5.11.2-web/css/all.min.css" rel="stylesheet" />
    @*Chèn css file tiny(Mô tả theo word)*@
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    @*chèn css phân trang*@
    <link href="~/Areas/Admin/AdminCSS/PhanTrangCSS.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- start: Header -->
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <!-- start: Header Menu -->
                <div class="nav-no-collapse header-nav">
                    <ul class="nav pull-right">
                        <li class="dropdown hidden-phone">

                        </li>
                        <!-- start: User Dropdown -->
                        <li class="dropdown">
                            @Html.Action("HienThiTKADPartial", "Admin")
                            <ul class="dropdown-menu">
                                <li class="dropdown-menu-title">
                                    <span>Cài đặt tài khoản</span>
                                </li>
                                <li><a href="#"><i class="halflings-icon user"></i>Hồ sơ</a></li>

                                <li><a href="@Url.Action("DangXuat","Admin")"><i class="halflings-icon off"></i>Đăng xuất</a></li>


                            </ul>
                        </li>
                        <!-- end: User Dropdown -->
                    </ul>
                </div>
                <!-- end: Header Menu -->

            </div>
        </div>
    </div>
    <!-- start: Header -->

    <div class="container-fluid-full">
        <div class="row-fluid">

            <!-- start: Main Menu -->
            <div id="sidebar-left" class="span2">
                <div class="nav-collapse sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        <li><a href="@Url.Action("Index","QuanLySanPham")"><i class="fa fa-book"></i><span class="hidden-tablet">Quản lý sản phẩm</span></a></li>
                        <li><a href="@Url.Action("Index", "QuanLyChuDe")"><i class="fa fa-arrows-alt"></i><span class="hidden-tablet"> Quản lý chủ đề</span></a></li>
                        <li><a href="@Url.Action("Index", "QuanLyNhaXuatBan")"><i class="fa fa-arrow-circle-o-right"></i><span class="hidden-tablet"> Quản lý nhà xuất bản</span></a></li>
                        <li><a href="@Url.Action("Index", "QuanLyTacGia")"><i class="fa fa-arrow-circle-o-right"></i><span class="hidden-tablet"> Quản lý tác giả</span></a></li>
                        <li><a href="@Url.Action("Index", "QuanLyKhachHang")"><i class="fa fa-arrow-circle-o-right"></i><span class="hidden-tablet">Quản lý khách hàng</span></a></li>
                        <li>
                            <a class="dropmenu" href="#"><i class="icon-folder-close-alt"></i><span class="hidden-tablet">Đơn hàng</span><span class="label label-important">@Html.Action("SoDH", "QuanLyDonDatHang")</span></a>
                            <ul>
                                <li><a href="@Url.Action("Index", "QuanLyDonDatHang")"><i class="fa fa-arrow-circle-o-right"></i><span class="hidden-tablet">Quản lý đơn hàng</span></a></li>
                                <li><a href="@Url.Action("Index", "QuanLyChiTietDonHang")"><i class="fa fa-arrow-circle-o-right"></i><span class="hidden-tablet">Xem chi tiết đơn hàng</span></a></li>
                                @*<li><a class="submenu" href="submenu3.html"><i class="icon-file-alt"></i><span class="hidden-tablet"> Sub Menu 3</span></a></li>*@
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- end: Main Menu -->

            <noscript>
                <div class="alert alert-block span10">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
                </div>
            </noscript>

            <!-- start: Content -->
            <div id="content" class="span10">

                @RenderBody()

            </div><!--/row-->



        </div><!--/.fluid-container-->
        <!-- end: Content -->
    </div><!--/#content.span10--><!--/fluid-row-->

    <div class="modal hide fade" id="myModal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Settings</h3>
        </div>
        <div class="modal-body">
            <p>Here settings can be configured...</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary">Save changes</a>
        </div>
    </div>

    <div class="clearfix"></div>

    <footer>

        <p>

        </p>

    </footer>
    <!-- start: JavaScript-->
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery-1.9.1.min.js"></script>
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery-1.9.1.min.js"></script>
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery-migrate-1.0.0.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery-ui-1.10.0.custom.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.ui.touch-punch.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/modernizr.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/bootstrap.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.cookie.js"></script>

    <script src='~/Areas/Admin/TemplateAdmin/js/fullcalendar.min.js'></script>

    <script src='~/Areas/Admin/TemplateAdmin/js/jquery.dataTables.min.js'></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/excanvas.js"></script>
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.flot.js"></script>
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.flot.pie.js"></script>
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.flot.stack.js"></script>
    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.flot.resize.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.chosen.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.uniform.min.js"></script>

    <script src="~/Areas/Admin/TemplateAdmin/js/jquery.cleditor.min.js"></script>

